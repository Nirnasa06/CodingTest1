@model List<Employee>

<table>
    <thead>
        <tr>
            <th>Type</th>
            <th>Vacation Days</th>
            <th>Days Worked</th>
            <th></th>
            <th>Days Vacation</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].GetType().Name</td>
                <td>@Model[i].VacationDays</td>
                <td>
                    @using (Html.BeginForm("Work", "Home"))
                    {
                        @Html.Hidden("employeeIndex", i)
                        @Html.TextBox("daysWorked")
                        <input type="submit" value="Work" />
                    }
                </td>
                <td>
                    @using (Html.BeginForm("TakeVacation", "Home"))
                    {
                        @Html.Hidden("employeeIndex", i)
                        @Html.TextBox("days")
                        <input type="submit" value="Take Vacation" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
